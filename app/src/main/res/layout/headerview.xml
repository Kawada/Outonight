<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/accent_material_light"
    android:layout_height="220dp">

    <LinearLayout
        android:layout_marginTop="@dimen/drawer_header_photo_margin_top"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <edu.fst.m2.ipii.outonight.ui.view.RoundedImageView
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_photo_placeholder"
            android:id="@+id/header_imageview" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/drawer_header_element_margin_top"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/drawer_firstname_placeholder"
            android:id="@+id/header_surname_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/drawer_lastname_placeholder"
            android:id="@+id/header_name_textview" />
    </LinearLayout>
</LinearLayout>